override EXTRA_LXXFLAGS+=@EXTRA_LXXFLAGS@
override CXXFLAGS += @DEFS@
override LXXFLAGS +=
START_GROUP  = @START_GROUP@
END_GROUP    = @END_GROUP@
LIBS+=@LIBS@

include $(DIR_ROOT)/_aux/inc-helper-post.mk

